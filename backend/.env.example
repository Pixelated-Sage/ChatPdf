# Gemini API (Required - get free key at aistudio.google.com)
GEMINI_API_KEY=your-key-here
GEMINI_MODEL=gemini-2.0-flash

# ChromaDB (Vector Store) - relative path for Railway
CHROMA_PERSIST_DIR=./chroma_db

# Database (SQLite) - relative path for Railway
DATABASE_URL=sqlite:///./chatpdf.db

# File Storage
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10000000

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-in-production

# CORS - Your Vercel frontend URL
FRONTEND_URL=https://your-app.vercel.app

# Port (Railway sets this automatically via $PORT)
PORT=8000
