# Gemini API (Required - get free key at aistudio.google.com)
GEMINI_API_KEY=your-key-here
GEMINI_MODEL=gemini-2.0-flash

# ChromaDB (Vector Store)
# For Railway: Use ./chroma_db (Railway provides persistent storage)
CHROMA_PERSIST_DIR=./chroma_db

# Database (SQLite)
# For Railway: Use ./chatpdf.db (Railway provides persistent storage)
DATABASE_URL=sqlite:///./chatpdf.db

# File Storage
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10000000

# Security
SECRET_KEY=change-this-in-production

# CORS (Frontend URL)
# Set this to your Vercel deployment URL
FRONTEND_URL=https://your-app.vercel.app
